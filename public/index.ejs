    <script>
      var socket = io();
      var lastResultEl = null;
      socket.on('bash-result', function(msg) {
        console.log(msg);
        //$(lastResultEl).append($('<span>' + msg + '</span>'));
        $(lastResultEl).html($(lastResultEl).html() + msg);

        var wtf    = $(lastResultEl);
        var height = wtf[0].scrollHeight;
        wtf.scrollTop(height);

      });
    </script>
    <script>
      $(".play-terminal").bind('click', function(e) {
        console.log(e);
        e.preventDefault();
        $(e.target).hide();

        const cid = $(e.target).data("code")
        const rid = $(e.target).data("result")

        const codeEl = $("#" + cid);
        codeEl.hide();

        const resultEl = $("#" + rid);
        resultEl.show();
        lastResultEl = resultEl;


        socket.emit('bash', codeEl.text());
      });
